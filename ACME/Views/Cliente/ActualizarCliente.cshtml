@model ACME.Models.VM.ClienteActualizarVM
@{
	ViewData["Title"] = "Actualizar cliente";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-center align-items-center mt-md-5 mt-3">

	<form method="post" autocomplete="off" asp-action="ActualizarCliente" class="col-md-4 mx-auto">

		<input hidden asp-for="ClienteActualizarDto.Id" />

		<div class="container-fluid border p-4">

			<div class="mb-5">
				<h2 class="text-primary">Actualizar cliente</h2>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			</div>

			<div class="mb-3 mt-4">

				<div class="form-floating mb-4">
					<input asp-for="ClienteActualizarDto.ClienteVisitado" class="form-control" placeholder="Cliente visitado">
					<label for="PaytefAPICompany" class="form-label text-primary">Cliente visitado</label>
					<span asp-validation-for="ClienteActualizarDto.ClienteVisitado" class="text-danger"></span>
				</div>

				<div class="form-floating mb-4">
					<input asp-for="ClienteActualizarDto.FechaDeVisita" class="form-control" placeholder="Fecha de visita">
					<label for="Codigo" class="form-label text-primary">Fecha de visita</label>
					<span asp-validation-for="ClienteActualizarDto.FechaDeVisita" class="text-danger"></span>
				</div>

				<div class="form-floating mb-4">
					<input asp-for="ClienteActualizarDto.ComercialResponsable" class="form-control" style="height: 65px;" placeholder="Comercial responsable">
					<label for="Nombre" class="form-label text-primary">Comercial responsable</label>
					<span asp-validation-for="ClienteActualizarDto.ComercialResponsable" class="text-danger"></span>
				</div>


			</div>


			<div class="d-grid gap-2  mt-5">
				<button type="submit" class="btn btn-warning">Actualizar</button>
				<a asp-controller="Cliente" asp-action="ListadoCliente" class="btn btn-primary">Atrás</a>
			</div>
		</div>
	</form>
</div>
