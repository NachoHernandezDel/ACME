@model ACME.Models.VM.ClienteEliminarVM
@{
    ViewData["Title"] = "Eliminar cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center mt-md-5 mt-3">
    <form method="post" autocomplete="off" asp-action="EliminarCliente" class="col-md-4 mx-auto">

        <input hidden asp-for="ClienteDto.Id" />

        <div class="container-fluid border p-4">

            <div class="mb-5">
                <h2 class="text-primary">Eliminar cliente</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            </div>

            <div class="mb-3 mt-4">
                <div class="form-floating mb-4">
                    <input asp-for="ClienteDto.ClienteVisitado" class="form-control" placeholder="Cliente visitado">
                    <label for="PaytefAPICompany" class="form-label text-primary">Cliente visitado</label>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ClienteDto.FechaDeVisita" class="form-control" placeholder="Fecha de visita">
                    <label for="Codigo" class="form-label text-primary">Fecha de visita</label>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ClienteDto.ComercialResponsable" class="form-control" style="height: 65px;" placeholder="Comercial responsable">
                    <label for="Nombre" class="form-label text-primary">Comercial responsable</label>
                </div>
            </div>


            <div class="d-grid gap-2  mt-5">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-controller="Cliente" asp-action="ListadoCliente" class="btn btn-primary">Atrás</a>
            </div>

        </div>

    </form>
</div>

